<html lang="en">
<head>
  {{>links}}
</head>
<body>
  {{>navbar}}
    <!-- header Part -->
    <div class="container">
        <div class="row">
            <!-- Left Part -->
            <div class="col-md-6 cd-12 left_header">
                <p>Welcome To Weather Check</p> 
                <h1>Get The Latest <span style="color:#0097e6;">Weather</span> Info Of Your City</h1>
                <a href="/weather" class="my_a"><button class="btn my-btn">Check Now</button></a>
            </div>
            <!-- Right Part -->
            <div class="col-md-6 cd-12 right_header">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="d-block w-100" src="./images/1.png" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="./images/2.png" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="./images/3.png" alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
            </div>
        </div>
    </div>
    <!-- Footer Part -->
    {{>footer}}
</body>
</html>